---
interface Props {
  links: {
    name: string;
    link: string;
    icon: string;
  }[];
  negative?: boolean;
}

const {links, negative}: Props = Astro.props;
---

<div class="flex flex-col gap-6 items-center justify-between m-4">
  {links.map((link) =>
      <a href={link.link} target="_blank" data-negative={negative ? 'true' : 'false'}
         class="flex font-bold rounded-lg text-lg h-25 p-3 bg-owowhite [&[data-negative='true']]:bg-owopurple-800 bg-opacity-70 text-owopurple-800 [&[data-negative='true']]:text-owowhite transition duration-150 hover:scale-105 w-full max-w-xs  items-center justify-center"><img
          src={link.icon} alt="Icon" class="w-6 h-6 p-1">{link.name}</a>
  )}
</div>